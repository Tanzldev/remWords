<!--pages/complete/complete.wxml-->

<view class="booksType">
  <view class="booksTypeBody">
    <!-- value为Picker选择后携带的返回值，range为选择的自定义范围-->
    <picker bindchange="bindPickerChange" bindcancel="bindPickerCancel" value="{{index}}" range="{{array}}" bindtap="booksTypeBtn">{{bookItem}}</picker>
    <image class="booksTypeImg" src="{{booksTypeImgSrc}}"></image>
  </view>
  
</view>
<!-- 分行线 -->
<view class="line"></view>

<!-- 词书选择 -->
<view class="scrollviewBody">
  <scroll-view class="scroll-view" scroll-y="true">
    <view class="scrollviewItems" wx:for="{{scrollviewArray}}">
      <!-- index为数组元素下标，item为数组元素中的子成员变量 -->
      {{index}}: {{item.message}}          

    </view>

  </scroll-view>
</view>



