/* pages/complete/complete.wxss */
page {
  height: 100%;           /*全为scrollview自适应手机高度*/
}
.body{
  height: 100%;
  display: flex;
  flex-direction: column;
}

.booksType{
  display: flex;
}

.booksTypeBody{
  display: flex;
  margin:auto;            /*水平居中显示*/
  align-items: center;    /*垂直居中显示*/
  letter-spacing: 10rpx;  /*文字间距*/
}

.booksTypeImg{
  width: 15rpx;
  height: 15rpx;
}

.line{
  width: 100%;
  height: 2rpx;
  margin-top: 10rpx;
  background: #000000;
}

/* 滑块选择器部分修饰 */
.scrollviewBody{
  flex: 1;                    /*全为scrollview自适应手机高度*/
  overflow: scroll; 
  
}
.scroll-view{
  height: 100%;
}

.scrollviewItems{
  display: flex;              /*启用flex布局*/
  flex-direction: row;        /*盒子元素排列方式为row水平方式，主轴方向为水平方向*/
  /* justify-content: center; */  /*元素在主轴方向上的对齐方式*/
  align-items: center;        /*元素在垂直主轴上的对齐方式*/
  height: 240rpx;
  width: 100%;
  border: #b5b1b0;         
  border-bottom-style:solid;   /*只显示边框的底边，solid为实体边框*/
  border-width: 2rpx;
}

.bookImg{
  width: 140rpx;
  height: 180rpx;
  margin-left: 5%;
  background: aquamarine;
}

.bookIntroBody{

  display: flex;
  flex-direction: column;         /*子元素对齐方向为竖直方向*/
  
}

/* 词书右侧文字介绍 */
.bookIntroText{
  display: flex;
  flex-direction: column;         /*子元素排列方向为竖直方向*/
  justify-content: center;
  width: 360rpx;
  height: 180rpx;
  margin-left: 10%;
  
}

.bookName{
  margin-bottom: 25rpx;
  color:rgb(2, 1, 1)
}

.wordsCount{
 font-size: 30rpx;
}

.bookLabel{
  background: rgb(255, 229, 82);
  width: fit-content;         /*根据内容填充，设置宽度*/
  border-radius: 6rpx;        /*边框圆角处理*/
  margin-top: 20rpx;
  font-size: 25rpx;
  letter-spacing: 10rpx;
  color: rgb(0, 0, 0);
}


/* 词书右侧操作整体修饰 */
.rightOperate{
  display: flex;
  flex-direction: column;       /*子元素排列方向为竖直方向*/
  justify-content: center;
  align-items: center;
  height: 180rpx;
  width: 180rpx;
  /* border: 3rpx solid red; */

}


.imgBody{
  margin-top: 10%;
  display: flex;
  flex-direction: row;
}
.fondImg{
  width: 60rpx;
  height: 60rpx;
  background: red;
}
.bookDetail{
  margin-left: 15%;
  width: 60rpx;
  height: 60rpx;
  background: red;
}
.selectBook{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 10%;
  height: 50rpx;
  width: 140rpx;
  background: #15c6f2;
  border-radius: 30rpx;

}
.selectBookText{
  font-size: 25rpx;
  text-align: center;
}

